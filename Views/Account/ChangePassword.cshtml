<body>
    <div class="layui-tab page-content-wrap">
        <ul class="layui-tab-title">
            <li class="layui-this">修改密码</li>
        </ul>
        <div class="layui-tab-content">
            <div class="layui-tab-item layui-show">
                <form class="layui-form" v style="width: 90%;padding-top: 20px;" id="change-password-form" action="/Account/ChangePassword/" method="post">
                    <div class="layui-tab" asp-validation-summary="All">
